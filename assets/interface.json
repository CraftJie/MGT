{
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb"
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Visual Studio"
            }
        }
    ],
    "resource": [
        {
            "name": "B服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "task": [
        {
            "name": "打开游戏",
            "entry": "任务_打开APP"
        },
        {
            "name": "关闭公告并签到",
            "entry": "任务_关闭公告",
            "checked": true
        },
        {
            "name": "领取浮游城奖励",
            "entry": "任务_领取浮游城奖励",
            "checked": true
        },
        {
            "name": "领取好友礼物",
            "entry": "任务_好友礼物领取及送礼",
            "checked": true
        },
        {
            "name": "领取商店每日金币",
            "entry": "任务_商店领取每日免费金币",
            "checked": true
        },
        {
            "name": "公会签到",
            "entry": "任务_公会签到",
            "checked": true
        },
        {
            "name": "觉醒副本扫荡",
            "entry": "任务_觉醒副本扫荡",
            "checked": true
        },
        {
            "name": "每日邮件领取",
            "entry": "任务_每日邮件领取",
            "option": [
                "选项_邮件领取数量"
            ],
            "doc": "领取体力邮件，默认领取1个"
        },
        {
            "name": "忒提斯英雄传扫荡",
            "entry": "任务_忒提斯英雄传扫荡",
            "option": [
                "选项_忒提斯英雄传扫荡次数"
            ],
            "doc": "仅用于扫荡模式"
        },
        {
            "name": "进化石副本扫荡(默认最大体力)",
            "entry": "任务_进化石副本",
            "option": [
                "选项_进化石副本属性"
            ]
        },
        {
            "name": "圆形角斗场(默认选择第二个，只适合摆烂玩家)",
            "entry": "任务_圆形角斗场"
        },
        {
            "name": "领取任务奖励(仅日常)",
            "entry": "任务_领取任务奖励",
            "checked": true
        },
        {
            "name": "领取邀请函奖励",
            "entry": "任务_领取邀请函奖励",
            "checked": true
        },
        {
            "name": "扭蛋机活动领取",
            "entry": "任务_扭蛋机活动领取"
        },
        {
            "name": "陨石挖掘计划(手动选择，调试中)",
            "entry": "任务_陨石挖掘计划"
        }
    ],
    "option": {
        "选项_邮件领取数量": {
            "cases": [
                {
                    "name": "1",
                    "pipeline_override": {
                        "选择_邮件领取数量": {
                            "next": "动作:邮件领取数量X1"
                        }
                    }
                },
                {
                    "name": "2",
                    "pipeline_override": {
                        "选择_邮件领取数量": {
                            "next": "动作:邮件领取数量X2"
                        }
                    }
                }
            ]
        },
        "选项_忒提斯英雄传扫荡次数": {
            "cases": [
                {
                    "name": "5次",
                    "pipeline_override": {
                        "选择_忒提斯英雄传扫荡次数": {
                            "next": "点击_扫荡X5_忒提斯英雄传",
                            "focus_tip": "动作：选择扫荡次数X5"
                        }
                    }
                },
                {
                    "name": "最大次数",
                    "pipeline_override": {
                        "选择_忒提斯英雄传扫荡次数": {
                            "next": "点击_扫荡XMAX_忒提斯英雄传",
                            "focus_tip": "动作：选择扫荡次数XMax"
                        }
                    }
                }
            ]
        },
        "选项_进化石副本属性": {
            "cases": [
                {
                    "name": "虚",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "虚属性进化石副本",
                            "focus_tip": "动作：选择虚属性进化石副本"
                        }
                    }
                },
                {
                    "name": "土",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "土属性进化石副本",
                            "focus_tip": "动作：选择土属性进化石副本"
                        }
                    }
                },
                {
                    "name": "光",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "光属性进化石副本",
                            "focus_tip": "动作：选择光属性进化石副本"
                        }
                    }
                },
                {
                    "name": "火",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "火属性进化石副本",
                            "focus_tip": "动作：选择火属性进化石副本"
                        }
                    }
                },
                {
                    "name": "暗",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "暗属性进化石副本",
                            "focus_tip": "动作：选择暗属性进化石副本"
                        }
                    }
                },
                {
                    "name": "水",
                    "pipeline_override": {
                        "选择_进化石副本属性": {
                            "expected": "水属性进化石副本",
                            "focus_tip": "动作：选择水属性进化石副本"
                        }
                    }
                }
            ]
        }
    },
    "name": "MGT",
    "url": "https://github.com/CraftJie/MGT",
    "version": "v0.2.2"
}